<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".don_cua_toi45"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/tl_layout"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:background="@drawable/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <ImageButton
            android:id="@+id/backtdoncuatoi45"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Đơn của tôi"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/thongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_style"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="99dp"
            android:src="@drawable/khautrang1" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="Khẩu trang KJ 95\n(20 cái/1 hộp)\nAnh Hung | 0913747859\n 209/12/1 Nguyễn Xiển, phường Long Thạnh Mỹ, Thành Phố Thủ Đức\nĐơn vị mua hàng\nPharmacity | Nguyễn Văn Tăng"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/editsoluong"
            android:layout_width="94dp"
            android:layout_height="112dp"
            android:layout_marginLeft="330dp"
            android:text="Đang xử lý"
            android:gravity="center"
            android:textColor="@color/black" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>