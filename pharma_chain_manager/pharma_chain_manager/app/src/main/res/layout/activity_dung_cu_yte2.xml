                        android:text="125.000đ/hộp(20 cái)"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/kittest"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:id="@+id/testcovid"
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/kittestcovid"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Kit test covid-19 Humanis"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="109.000đ/hộp(1 kit) "
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchMode="columnWidth">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/paradon"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Paradon extra"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="18.000đ/ 1 vỉ"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/nep1"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nẹp cổ tay United Medicare"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="450.000đ"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchMode="columnWidth">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/vitac1"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Vitamin C"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="26.000đ/ 1 tuýt(20 viên/tuýt)"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/xitmui"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chai xịt mũi kháng Virus Viraleze"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="350.000đ/hộp(1 hộp)"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchMode="columnWidth">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/bonihappy"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Viên uống BoniHappy Botnia"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="380.000đ/hộp(1 hộp)"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bar"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageButton
                        android:layout_width="101dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/rirooo"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dung dịch ăn ngon Siro Healthy Kid "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="79.000đ/chai"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>