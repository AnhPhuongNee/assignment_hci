<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_style"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_style"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="99dp"
            android:src="@drawable/khautrang1" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:gravity="center"
            android:text="Khẩu trang KJ 95\n(20 cái/1 hộp)"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnaddtocart"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/btn_bg"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_soluon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/soluong_layout"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/cong"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/plus" />
        <ImageButton
            android:id="@+id/tru"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/subtraction" />
    </RelativeLayout>

</LinearLayout>