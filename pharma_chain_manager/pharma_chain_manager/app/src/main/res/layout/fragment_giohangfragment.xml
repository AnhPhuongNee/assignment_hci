<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giohangfragment"
    android:background="@color/white"
    android:id="@+id/giohang">

    <LinearLayout
        android:id="@+id/tl_layout"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:background="@drawable/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Giỏ hàng"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:text="Tổng tiền: 600.000đ"
            android:textColor="@color/black"
            android:textSize="23dp" />

        <Button
            android:id="@+id/btnthanhtoan"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_bg"
            android:text="Thanh toán"
            android:textColor="@color/black"
            android:textSize="10dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_style"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="99dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:src="@drawable/khautrang1" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:gravity="center"
            android:text="Khẩu trang KJ 95 (20 cái/1 hộp) 125.000đ"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editsoluong2"
            android:layout_width="40dp"
            android:layout_height="99dp"
            android:layout_marginLeft="350dp"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="99dp"
            android:src="@drawable/check" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="370dp"
            android:gravity="center"
            android:src="@drawable/remove" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_style"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="99dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:src="@drawable/xitmui" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:gravity="center"
            android:text="Chai Xịt Mũi Kháng Virus Viraleze\n350.000d"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editsoluong"
            android:layout_width="40dp"
            android:layout_height="99dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="350dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="99dp"
            android:src="@drawable/check" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="370dp"
            android:gravity="center"
            android:src="@drawable/remove" />


    </RelativeLayout>


